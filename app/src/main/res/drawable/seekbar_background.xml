<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer rectangular border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent inside -->
            <stroke
                android:width="2dp"
                android:color="#2349A6" /> <!-- Dark blue border -->
            <corners android:radius="20dp" /> <!-- Rounded corners for the seekbar background -->
        </shape>
    </item>

    <!-- Inner rectangular color -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/lightest_blue" /> <!-- Inner light blue color -->
            <corners android:radius="18dp" /> <!-- Ensure inner radius matches outer -->
        </shape>
    </item>
</layer-list>
