<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval"> <!-- Oval ensures the shape is circular -->

    <!-- Thumb's solid color -->
    <solid android:color="@color/slider_blue" />

    <!-- Optional stroke (border) around the thumb -->
    <stroke
        android:width="3dp"
        android:color="@color/lightest_blue" />

    <!-- Set the size to make sure it's large enough for visibility -->
    <size
        android:width="25dp"
        android:height="25dp" />

    <!-- Optional shadow (if needed) -->
    <padding
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp" />
</shape>


